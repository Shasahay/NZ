@model NotesZone.Domain.Basket.Basket

@if( Model.Lines.Count > 0)
{ 
<div id="basket" class="basket-summary" style="float:right; padding-top:2em">
    <span class="caption">
        <b>Your cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c")
    </span>

    @Html.ActionLink("Checkout", "Index", "Basket", new { returnUrl = Request.Url.PathAndQuery }, null)
</div> 
}
